<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label "Nombre completo" %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %> <i>(deja este campo en blanco si no quieres cambiar tu password)</i><br />
  <%= f.password_field :password %></p>

  <p><%= f.label "Confirmar password" %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label "Password actual" %> <i>(necesitamos tu password actual para confirmar tus cambios)</i><br />
  <%= f.password_field :current_password %></p>

  <p><%= f.submit "Actualizar", :class => 'as_button' %></p>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>&iquest;No est&aacute;s contento? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Regresar", :back %>
