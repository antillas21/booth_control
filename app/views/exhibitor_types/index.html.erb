<div>
	<div class="grid_12 alpha">
		<h2>Tipos de Expositor</h2>
	</div>
	<div class="grid_4 alpha">
		<%= link_to "<span class=\"ui-icon ui-icon-circle-plus\" style=\"float: left; margin-right: 5px;\">icon</span>Nuevo Tipo de Expositor".html_safe, new_exhibitor_type_path, :class => 'as_button' %>
	</div>
</div>
<table class="datatable">
	<thead>
		<tr>
			<th>Tipos</th>
		</tr>
	</thead>
	<tbody>
		<% @exhibitor_types.each do |exhibitor_type| %>
		<tr>
			<td class="onecolumn-only">
				<%= exhibitor_type.name %>
				<div class="hovercontrols">
					<ul id="controls">
					<li><%= link_to "<span class=\"ui-icon ui-icon-pencil\">icon</span>".html_safe, edit_exhibitor_type_path(exhibitor_type) %></li>
					<li><%= link_to "<span class=\"ui-icon ui-icon-trash\">icon</span>".html_safe, exhibitor_type, :confirm => "Esta seguro que desea borrar este tipo de expositor?", :method => :delete %></li>
					</ul>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>