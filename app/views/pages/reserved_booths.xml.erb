<?xml version="1.0" encoding="utf-8"?>
<map map_file="<%= @map.map_file %>" zoom="<%= @map.zoom %>" zoom_x="<%= @map.zoom_x %>" zoom_y="<%= @map.zoom_y %>">
	<areas>
	  <% @booths.each do |booth| %>
	  <area mc_name="<%= booth.code %>" title="<%= booth.booth_number %>"		
		<% if booth.available == true %>
			color="#<%= booth.color_hex_value %>">
		<% else %>
			color= "#cc0000">
		<% end %>
	    <% if booth.reservation %>
			<description><![CDATA[<%= booth.company_name %><br /><%= booth.company_profile %>]]></description>
		<% end %>
	  </area>
	  <% end %>
	</areas>
</map>